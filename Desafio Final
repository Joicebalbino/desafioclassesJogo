class heroi {
    constructor(nome, idade, tipo) {
        this.nome = nome;
        this.idade = idade;
        this.tipo = tipo;
    }
    atacar(){
        let ataque;
        switch (this.tipo){
            case "mago":
                ataque = "magia";
                break;
            case "guerreiro":
                ataque = "espada";
                break;
            case "monge":
                ataque = "artes marciais";
                break;
            case "ninja":
                ataque = "shuriken";
                break;
                default:
                    ataque = "n√£o fez nada";  

        }

        console.log ("O(A) " + this.tipo + " " + this.nome + " atacou usando " + ataque);
    }
}
let joice = new heroi ("Joice", 40, "monge");
let marcelo = new heroi ("Marcelo", 45, "mago");
let airan = new heroi ("Airan", 10, "ninja");
let felipe = new heroi ("Felipe", 45, "guerreiro");

for(let heroi of [joice, marcelo, airan, felipe]) {
    heroi.atacar();
}
